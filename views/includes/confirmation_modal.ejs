<!-- Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass-modal">
            <div class="modal-header border-0 pb-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center pt-0">
                <div class="warning-icon mb-4">
                    <i class="fa-solid fa-triangle-exclamation text-danger display-4"></i>
                </div>
                <h3 class="modal-title mb-3" id="deleteConfirmationModalLabel">Are you sure?</h3>
                <p class="text-muted mb-4" id="deleteModalMessage">Do you really want to delete this? This action cannot be undone.</p>
                <div class="d-flex justify-content-center gap-3">
                    <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn px-4" id="confirmActionButton">Confirm</button>
                </div>
            </div>
        </div>
    </div>
</div>
