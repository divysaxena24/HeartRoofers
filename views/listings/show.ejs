<% layout("layouts/boilerplate") %>

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card show-card">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="<%= listing.title %>">
                <div class="card-body">
                    <h1 class="card-title mb-3 display-5"><%= listing.title %></h1>
                    <p class="card-text text-muted mb-4">Listed by: <%= listing.owner ? listing.owner.username : 'Unknown' %></p>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="text-primary">Key Details</h5>
                            <dl class="row">
                                <dt class="col-sm-4"><i class="fa-solid fa-indian-rupee-sign me-2"></i>Price:</dt>
                                <dd class="col-sm-8">₹<%= listing.price ? listing.price.toLocaleString("en-in") : 'N/A' %></dd>

                                <dt class="col-sm-4"><i class="fa-solid fa-location-dot me-2"></i>Location:</dt>
                                <dd class="col-sm-8"><%= listing.location %></dd>

                                <dt class="col-sm-4"><i class="fa-solid fa-door-open me-2"></i>Availability:</dt>
                                <dd class="col-sm-8"><%= listing.availability %> rooms</dd>

                                <dt class="col-sm-4"><i class="fa-solid fa-users me-2"></i>Room Sharing:</dt>
                                <dd class="col-sm-8"><%= listing.roomSharingType %></dd>

                                <dt class="col-sm-4"><i class="fa-solid fa-venus-mars me-2"></i>Gender Pref:</dt>
                                <dd class="col-sm-8"><%= listing.genderPreference %></dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-primary">Contact Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4"><i class="fa-solid fa-phone me-2"></i>Phone:</dt>
                                <dd class="col-sm-8"><a href="tel:<%= listing.contact.phone %>"><%= listing.contact.phone %></a></dd>

                                <dt class="col-sm-4"><i class="fa-solid fa-envelope me-2"></i>Email:</dt>
                                <dd class="col-sm-8"><a href="mailto:<%= listing.contact.email %>"><%= listing.contact.email %></a></dd>
                            </dl>
                        </div>
                    </div>

                    <hr class="my-4">

                    <h5 class="text-primary">Description</h5>
                    <p class="card-text mb-4"><%- listing.description || "No description provided." %></p>

                    <hr class="my-4">

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="text-primary">Facilities</h5>
                            <ul class="list-unstyled ms-3">
                                <% if (listing.facilities && listing.facilities.length > 0) { %>
                                    <% for(let facility of listing.facilities) { %>
                                        <li><%= facility %></li>
                                    <% } %>
                                <% } else { %>
                                    <li>No facilities listed.</li>
                                <% } %>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-primary">Food Options</h5>
                            <ul class="list-unstyled ms-3">
                                <% if (listing.foodOptions && listing.foodOptions.length > 0) { %>
                                    <% for(let option of listing.foodOptions) { %>
                                        <li><%= option %></li>
                                    <% } %>
                                <% } else { %>
                                    <li>No food options listed.</li>
                                <% } %>
                            </ul>
                        </div>
                    </div>

                    <hr class="my-4">

                    <h5 class="text-primary">Rules & Policies</h5>
                    <ul class="list-unstyled ms-3 mb-4">
                        <% if (listing.rulesPolicies && listing.rulesPolicies.length > 0) { %>
                            <% for(let rule of listing.rulesPolicies) { %>
                                <li><%= rule %></li>
                            <% } %>
                        <% } else { %>
                            <li>No rules or policies listed.</li>
                        <% } %>
                    </ul>

                    <% if (currentUser && currentUser._id.toString() === listing.owner._id.toString()) { %>
                        <div class="d-flex gap-2 mt-3">
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning">Edit Details</a>
                            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE" onsubmit="return confirm('Are you sure?');">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-8 offset-md-2">
            <h3 class="mb-3 text-primary">All Reviews</h3>
            <% if (reviews.length > 0) { %>
                <% for (let review of reviews) { %>
                    <div class="card review-card mb-3">
                        <div class="card-body">
                            <h5 class="card-title"><%= review.author.username %></h5>
                            <p class="card-text"><b>Rating:</b> <%= review.rating %> ⭐</p>
                            <p class="card-text"><%= review.comment %></p>
                            <% if (currentUser && review.author._id.toString() === currentUser._id.toString()) { %>
                                <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this review?');">
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            <% } else { %>
                <p class="text-muted">No reviews yet. Be the first to leave one!</p>
            <% } %>
        </div>
    </div>

    <% if (currentUser) { %>
        <div class="row mt-5">
            <div class="col-md-8 offset-md-2">
                <h3 class="mb-3 text-primary">Leave a Review</h3>
                <form method="post" action="/listings/<%= listing.id %>/reviews" novalidate class="needs-validation mb-4">
                    <div class="mb-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" id="rating" name="review[rating]" min="1" max="5" value="3" class="form-range w-auto d-inline-block align-middle me-2">
                        <span id="rating-value" class="fw-bold align-middle">3</span>
                    </div>
                    <div class="mb-3">
                        <label for="comment" class="form-label">Comments</label>
                        <textarea name="review[comment]" id="comment" cols="30" rows="5" placeholder="Share your experience..." required class="form-control"></textarea>
                        <div class="invalid-feedback">Enter a valid review</div>
                    </div>
                    <button class="btn btn-primary" type="submit">Submit Review</button>
                </form>

<script>
    const rating = document.getElementById('rating');
    const ratingValue = document.getElementById('rating-value');

    rating.addEventListener('input', (event) => {
        ratingValue.textContent = event.target.value;
    });
</script>
            </div>
        </div>
    <% } else { %>
        <p class="text-center my-5"><a href="/login" class="btn btn-primary">Add a Review</a></p>
    <% } %>
</div>