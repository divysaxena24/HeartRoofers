<% layout("layouts/boilerplate") %>

<div class="container mt-4">
    <h1 class="text-center mb-4">All Properties</h1>

    <div class="row justify-content-center mb-5 mt-3">
        <div class="col-md-10 col-lg-8">
            <form class="d-flex" role="search" action="/listings/search" method="GET">
                <input
                    type="search"
                    class="form-control me-2"
                    placeholder="Search by City, State, or Title"
                    aria-label="Search"
                    name="q"
                    value="<%= q || '' %>"
                />
                <button class="btn btn-primary" type="submit">
                    <i class="fa-solid fa-search"></i>
                </button>
            </form>
        </div>
    </div>

    <div class="row">
        <% if (allListing.length > 0) { %>
            <% for (let listing of allListing) { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <img src="<%= listing.image.url %>" class="card-img-top listing-card-image" alt="<%= listing.title %>">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= listing.title %></h5>
                            <p class="card-text"><%= listing.location %></p>
                            <p class="card-text text-muted">By <%= listing.owner ? listing.owner.username : 'Divya Saxena' %></p>
                            <p class="card-text fw-bold">
                                â‚¹<%= listing.price ? listing.price.toLocaleString("en-in") : 'N/A' %>
                            </p>
                            <a href="/listings/<%= listing._id %>" class="btn btn-primary mt-auto">View Details</a>
                        </div>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <div class="col-12 text-center py-5">
                <img src="https://cdni.iconscout.com/illustration/premium/thumb/no-data-found-7350009-5974971.png" alt="No listings found" class="img-fluid mb-3" style="max-height: 200px;">
                <h2>No listings found.</h2>
                <p>Try adjusting your filters or create a new listing!</p>
                <a href="/listings/new" class="btn btn-primary mt-3">Create New Listing</a>
            </div>
        <% } %>
    </div>

    <div class="text-center mt-4">
        <a href="/listings/new" class="btn btn-primary btn-lg">Create New Listing <i class="fa-solid fa-plus"></i></a>
    </div>
</div>