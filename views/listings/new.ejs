<% layout("layouts/boilerplate") %>

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card p-4">
                <h2 class="text-center mb-4">Add New Property</h2>
                <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title *</label>
                        <input type="text" class="form-control" id="title" name="title" placeholder="Enter title" required>
                        <div class="invalid-feedback">Title is required.</div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Image</label>
                        <input type="file" class="form-control" id="image" name="image" accept="image/*">
                        <div id="image-error" class="text-danger" style="display:none;">File must be less than 10 MB.</div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="price" class="form-label">Price *</label>
                            <input type="number" class="form-control" id="price" name="price" placeholder="Enter price" required>
                            <div class="invalid-feedback">Price is required.</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="location" class="form-label">Location *</label>
                            <input type="text" class="form-control" id="location" name="location" placeholder="Enter location" required>
                            <div class="invalid-feedback">Location is required.</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description *</label>
                        <textarea class="form-control" id="description" name="description" rows="3" placeholder="Enter description" required></textarea>
                        <div class="invalid-feedback">Description is required.</div>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Contact Phone *</label>
                        <input type="tel" class="form-control" id="phone" name="contact[phone]" placeholder="Enter contact phone" required>
                        <div class="invalid-feedback">Contact phone is required.</div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">Contact Email *</label>
                            <input type="email" class="form-control" id="email" name="contact[email]" placeholder="Enter contact email" required>
                            <div class="invalid-feedback">A valid email is required.</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="facilities" class="form-label">Facilities (comma-separated) *</label>
                            <textarea class="form-control" id="facilities" name="facilities" rows="2" placeholder="e.g., Free WiFi, Shared Kitchen" required></textarea>
                            <div class="invalid-feedback">Facilities are required.</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="roomSharingType" class="form-label">Room Sharing Type *</label>
                            <select class="form-select" id="roomSharingType" name="roomSharingType" required>
                                <option value="">Select type</option>
                                <option value="Private Room">Private Room</option>
                                <option value="Shared Room">Shared Room</option>
                                <option value="Entire Place">Entire Place</option>
                            </select>
                            <div class="invalid-feedback">Room sharing type is required.</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="genderPreference" class="form-label">Gender Preference *</label>
                            <select class="form-select" id="genderPreference" name="genderPreference" required>
                                <option value="">Select preference</option>
                                <option value="Any">Any</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            <div class="invalid-feedback">Gender preference is required.</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="foodOptions" class="form-label">Food Options (comma-separated) *</label>
                            <textarea class="form-control" id="foodOptions" name="foodOptions" rows="2" placeholder="e.g., Vegetarian, Non-Vegetarian" required></textarea>
                            <div class="invalid-feedback">Food options are required.</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="availability" class="form-label">Availability (Number of Rooms) *</label>
                            <input type="number" class="form-control" id="availability" name="availability" placeholder="Enter number of available rooms" required>
                            <div class="invalid-feedback">Availability is required.</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="rulesPolicies" class="form-label">Rules and Policies (comma-separated) *</label>
                        <textarea class="form-control" id="rulesPolicies" name="rulesPolicies" rows="3" placeholder="e.g., No smoking, Quiet hours after 10 PM" required></textarea>
                        <div class="invalid-feedback">Rules and policies are required.</div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Add Property</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
